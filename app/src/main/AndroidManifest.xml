<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jadd.easyrestro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NewOrderActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/new_order_title"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.MainActivity" />
        </activity>
        <activity
            android:name=".CartAddItemActivity"
            android:label="@string/add_item_title"
            android:parentActivityName=".OrderActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.jadd.easyrestro.OrderActivity" />
        </activity>
        <activity
            android:name=".AddTable"
            android:label="@string/add_table"
            android:parentActivityName=".SettingActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.jadd.easyrestro.SettingActivity" />
        </activity>
        <activity
            android:name=".OrderActivity"
            android:label="@string/order_name"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.jadd.easyrestro.MainActivity" />
        </activity>
        <activity
            android:name=".AddItem"
            android:label="@string/add_item_title"
            android:parentActivityName=".SettingActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.jadd.easyrestro.SettingActivity" />
        </activity>
        <activity
            android:name=".AddCategory"
            android:label="@string/add_category_title"
            android:parentActivityName=".SettingActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.jadd.easyrestro.SettingActivity" />
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/menu_title"
            android:parentActivityName=".SettingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.SettingActivity" />
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>