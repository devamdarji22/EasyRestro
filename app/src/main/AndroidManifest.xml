<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jadd.easyrestro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.EmployeeActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".Activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.NewRestaurantActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".Activity.RestaurantActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.RestaurantActivity" />
        </activity>
        <activity android:name=".Activity.RestaurantActivity" />
        <activity android:name=".Activity.FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.SignUpActivity"
            android:parentActivityName=".Activity.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.LoginActivity" />
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".Activity.FirstActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.FirstActivity" />
        </activity>
        <activity
            android:name=".Activity.TaxActivity"
            android:label="@string/setting_tax_name"
            android:launchMode="singleTop"
            android:parentActivityName=".Activity.SettingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.SettingActivity" />
        </activity>
        <activity
            android:name=".Activity.NewOrderActivity"
            android:label="@string/new_order_title"
            android:parentActivityName=".Activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.CartAddItemActivity"
            android:label="@string/add_item_title"
            android:launchMode="singleTop"
            android:parentActivityName=".Activity.OrderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.OrderActivity" />
        </activity>
        <activity
            android:name=".Settings.AddTable"
            android:label="@string/add_table"
            android:parentActivityName=".Activity.SettingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.SettingActivity" />
        </activity>
        <activity
            android:name=".Activity.OrderActivity"
            android:label="@string/order_name"
            android:launchMode="singleTop"
            android:parentActivityName=".Activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Settings.AddItem"
            android:label="@string/add_item_title"
            android:parentActivityName=".Activity.SettingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.SettingActivity" />
        </activity>
        <activity
            android:name=".Settings.AddCategory"
            android:label="@string/add_category_title"
            android:parentActivityName=".Activity.SettingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.SettingActivity" />
        </activity>
        <activity
            android:name=".Settings.MenuActivity"
            android:label="@string/menu_title"
            android:parentActivityName=".Activity.SettingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.SettingActivity" />
        </activity>
        <activity
            android:name=".Activity.SettingActivity"
            android:label="@string/action_settings"
            android:launchMode="singleTop"
            android:parentActivityName=".Activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jadd.easyrestro.Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>